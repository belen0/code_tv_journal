%h1 Kaminari

%p You do not need to create this markup yourself.  To acheive these effects, just use kaminari as you normally would.

.row
  .large-6.small-12.columns
    %h2 Page 1 of 4:
    %p
      %em (Markup was generated by kaminari)
    %nav.pagination
      %span.page.current
        1
      %span.page
        = link_to "2", "#", rel: "next"
      %span.page
        = link_to "3", "#"
      %span.page
        = link_to "4", "#"
      %span.next
        = link_to "#", rel: "next" do
          Next &rsaquo;
      %span.last
        = link_to "#" do
          Last &raquo;

  .large-6.small-12.columns.mobile-margin-top
    %h2 Page 2 of 4:
    %p
      %em (Markup was generated by kaminari)
    %nav.pagination
      %span.first
        = link_to "#" do
          &laquo; First
      %span.prev
        = link_to "#", rel: "prev" do
          &lsaquo; Prev
      %span.page
        = link_to "#", rel: "prev" do
          1
      %span.page.current
        2
      %span.page
        = link_to "#", rel: "next" do
          3
      %span.page
        = link_to "#" do
          4
      %span.next
        = link_to "#", rel: "next" do
          Next &rsaquo;
      %span.last
        = link_to "#" do
          Last &raquo;
