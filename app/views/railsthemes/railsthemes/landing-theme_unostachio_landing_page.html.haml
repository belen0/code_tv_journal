.main-highlight
  %h1 This is One Amazing App!
  .row
    .large-8.columns
      = image_tag "http://placehold.it/600x400/ccc/fff&text=[+Image+]", style: "width: 100%", class: "border"
    .large-4.columns
      %h3 You will love our Secondary CTA
      %p= lorem(42)
      .text-centered-small
        = link_to "Sign Up Now!", "#", class: "button radius large"

.row
  .large-12.columns
    %h4 Our Happy Customers:
    .happy_customers
      .row
        - 3.times do
          .large-4.columns
            .customer.text-centered-small
              .row
                .large-4.medium-12.columns
                  = image_tag "/assets/railsthemes_unostachio/customer.png"
                .large-8.medium-12.columns
                  %br
                  %p
                    %span.name Bob Smith,
                    %br
                    %span.business Startup Co.

.row
  .large-12.columns
    %h4 Our Features:
    .row
      - 4.times do
        .large-3.columns
          .home_page_feature.border
            = image_tag "http://placehold.it/600x400/ccc/fff&text=[+Image+]", style: "width: 100%"
            %p
              Excellent Feature
              %br
              %span.caption
                =link_to "A little more detail", "javascript:void(0)"
                
    .right
      = link_to "See More", "#", class: "button radius small"

