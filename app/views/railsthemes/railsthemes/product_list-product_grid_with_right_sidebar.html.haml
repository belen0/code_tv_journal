%h1 Product Grid w/ Sidebar
.row
  .large-9.small-12.columns
    - 4.times do
      .row
        - 3.times do
          .large-4.small-12.columns
            = image_tag "http://placehold.it/500x500&text=Product"
            .panel.product_description
              %h3 Product Name
              %p.price $19.99
              = link_to "Buy Now", "#", class: "button medium"
    .row
      .large-9.small-12.columns
        %p Showing Items 1-12 of 787
      .large-3.small-12.columns
        %p
          View 12
          |
          = link_to "24", "#"
          |
          = link_to "All", "#"
  .large-3.small-12.columns
    .options
      %h4 Brands
      %hr
      %ul.small-block-grid-1.large-block-grid-1
      - ["Coca Cola", "Proctor & Gamble", "Johnson & Johnson"].each do |brand|
        %input{ :type => "checkbox" }
          &nbsp;
          #{brand}
        %br
        %br
    .options
      %h4 Sizes
      %hr
      .row
        .large-12.small-12.columns
          %ul.small-block-grid-2.large-block-grid-2
          - ["All", 6, 6.5, 7, 7.5, 8, 8.5].each do |size|
            %input{ :type => "checkbox" }
              &nbsp;
              #{size}
            %br
            %br
    .options
      %h4 Colors
      %hr
      - colors = { "Red" => "FF0000", "Green" => "4AA02C", "Blue" => "2B65EC", "Pink" => "F778A1", "Purple" => "8D00B1", "Yellow" => "FFDD00" }
      - colors.each do |color|
        .row
          .large-2.small-2.columns
            = image_tag "http://placehold.it/30x30/#{color[1]}/#{color[1]}"
          .large-10.small-10
            = color[0]
        %br
