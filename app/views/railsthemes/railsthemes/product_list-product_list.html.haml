.row
  .large-6.small-12.columns
    %h1 Product List
  .large-6.small-12.columns
    .row.collapse
      .small-8.columns
        %input{ :type => "text", :placeholder => "Search" }
      .small-4.columns
        %button.prefix Search
- 3.times do
  .row
    .large-4.small-12.columns
      = image_tag "http://placehold.it/300x300&text=[Image]"
    .large-8.small-12.columns
      .row
        .large-6.small-12.columns
          %h3 Product Description
          %p= lorem(45)
        .large-6.small-12.columns
          %h3 Product Details
          %ul.details
            %li Neque porro quisquam
            %li Dolorem ipsum quia
            %li Adipisci velit
          %h3 Price
          %p
            %strong $999.99
          .cart
            = link_to "Add to cart Â»", "#", class: "medium button"
    %hr.greyscale
