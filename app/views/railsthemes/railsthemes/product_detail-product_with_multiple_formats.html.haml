.row
  .large-4.small-12.columns
    .row
      .small-12.columns
        = image_tag "http://placehold.it/330x530&text=[Product+Line]", :class => "prod-image", :style => "margin-bottom: 20px;"
      .small-12.columns
        = link_to "Buy Now", "#", class: "button medium"
      .small-12.columns
        = link_to "Reviews", "#", class: "button secondary"
  .large-8.small-12.columns
    %ul{ "data-orbit" => "true" }
      - 3.times do |counter|
        %li= image_tag "http://placehold.it/1000x500&text=[Product #{counter + 1}]", :class => "prod-image"
    .row.panel
      .large-12.small-12.columns
        %h2 Product Information
    .row.panel
      .large-12.small-12.columns
        %h3 Product Name
        %p= lorem(70)
    .row.panel
      %h3 Formats
      - 3.times do
        .row.panel
          .large-3.small-12.columns
            = image_tag "http://placehold.it/150x200", :class => "prod-image"
          .large-5.small-12.columns
            %h5
              = link_to "Format", "#"
            %p in quando consectetuer usu
            %p.prod-price $19.99
          .large-4.small-12.columns
            .panel
              %label Quantity
              %select
                %option 2
            = link_to "Buy Now", "#", class: "button medium"
        %br
