%h2 Edit User
%form#user_edit.user_edit{"accept-charset" => "UTF-8", :action => "#", :method => "post"}
  %div{:style => "margin:0;padding:0;display:inline"}
    %input{:name => "utf8", :type => "hidden", :value => ""}/
    %input{:name => "_method", :type => "hidden", :value => "put"}/
    %input{:name => "authenticity_token", :type => "hidden", :value => "rl4jFltMRM84mHyBdcdZFcBQYx4EWNBztA+kNf4jGWM="}/
  %div
    %label{:for => "user_email"} Email
    %br/
    %input#user_email{:name => "user[email]", :size => "30", :type => "email", :value => "elizabrock@gmail.com"}/
  %div
    %label{:for => "user_password"} Password
    %i (leave blank if you don't want to change it)
    %br/
    %input#user_password{:autocomplete => "off", :name => "user[password]", :size => "30", :type => "password"}/
  %div
    %label{:for => "user_password_confirmation"} Password confirmation
    %br/
    %input#user_password_confirmation{:name => "user[password_confirmation]", :size => "30", :type => "password"}/
  %div
    %label{:for => "user_current_password"} Current password
    %i (we need your current password to confirm your changes)
    %br/
    %input#user_current_password{:name => "user[current_password]", :size => "30", :type => "password"}/
  %div
    %input{:name => "commit", :type => "submit", :value => "Update"}/
%h3 Cancel my account
%p
  Unhappy?
  = link_to "Cancel my account", "#"
