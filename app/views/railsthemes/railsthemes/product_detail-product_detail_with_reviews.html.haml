.row
  .large-5.small-12.columns
    = image_tag "http://placehold.it/500x500", :class => "prod-image", :id => "featured-image", :style => "margin-bottom: 20px;"
    %ul.small-block-grid-4.large-block-grid-4
      - 4.times do
        %li= image_tag "http://placehold.it/500x500", :class => "prod-image"
  .large-7.small-12.columns
    %h1.prod-name Product Name
    %p.prod-description= lorem(60)
    %ul
      %li You should buy it
      %li Because it's great
      %li and everyone else has one
    %p.prod-price $19.99
    %button.cart-url.right Add to cart &raquo;
%hr
.row
  .large-12.small-12.columns
    .prod-reviews
      %h3 Reviews
    .row
      .small-12.columns
        .panel= render 'railsthemes/railsthemes/testimonial'
        .large-10.small-10.columns
        -#- A reply:
        .large-10.small-10.columns{:style => "padding-right: 0px;"}
          .panel= render 'railsthemes/railsthemes/response'
      - 3.times do
        .small-12.columns
          .panel= render 'railsthemes/railsthemes/testimonial'
%hr
.row
  .large-12.small-12.columns
    %h3 Similar Items
    %ul.small-block-grid-2.large-block-grid-5
      - 5.times do
        %li= image_tag "http://placehold.it/500x500"
