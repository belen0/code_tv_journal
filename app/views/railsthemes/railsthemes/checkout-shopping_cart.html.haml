.row
  .large-12.small-12.columns
    %table.responsive{ width: "100%" }
      %thead.mobile-disappear
        %tr
          - ["Items", "Deliver", "Price", "Quantity", "Total"].each do |heading|
            %th= heading
      %tbody
        - 2.times do
          %tr
            %td.mobile-expand
              .row
                .large-3.small-12.columns
                  = image_tag "http://placehold.it/100x100&text=[Product]", :class => "prod-image"
                .large-9.small-12.columns
                  %p.prod-title Product title
                  %p.prod-description Description
                  = link_to "Save for later, Remove", "#"
            %td.mobile-expand
              %input{ :type => "radio", :name => "delivery" }
                Store Pickup -
                = link_to "Free", "#"
              %p Arrives at store Wed 10/5 - Thur 10/11
              %input{ :type => "radio", :name => "delivery" }
                Ship to Home -
                = link_to "Free", "#"
              %p Standard Shipping
              %p Arrives Tue 10/2 - Fri 10/5
              = link_to "See more pickup and shipping details", "#"
            %td.mobile-expand
              %p.prod-price $8.95
            %td.mobile-expand
              %input{ :type => "text", :value => 9 }
            %td.mobile-expand
              %p.total $62.97
.row
  .large-7.small-12.columns
    = image_tag "http://placehold.it/1000x500&text=[Ad]", :class => "prod-image"
  .large-5.small-12.columns.mobile-margin-top
    .row
      %table.large-12.small-12.columns
        %tr
          %th Subtotal
          %td $36.52
        %tr
          %th Estimated Shipping
          %td $10.91
        %tr
          %th Estimated Order Total:
          %td $62.97
    .row
      .large-12.small-12.columns
        %p
          Proceed to checkout to view final order total, including taxes, fees, shipping and
          = link_to "optional gifting charges", "#"
    .row
      = link_to "Back to Shopping", "#", class: "large-6 small-6 columns button"
      = link_to "Proceed to Checkout", "#", class: "large-6 small-6 columns button"
